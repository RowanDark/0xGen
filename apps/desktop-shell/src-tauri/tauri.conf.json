{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "0xgen",
  "version": "0.1.0",
  "identifier": "dev.0xgen.desktop",
  "build": {
    "beforeBuildCommand": "npm install",
    "beforeDevCommand": "npm install && npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "0xgen",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "fileDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' http://127.0.0.1:*; font-src 'self';"
    }
  }
}
