{
  "package": {
    "productName": "0xgen",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false
      },
      "shell": {
        "all": false,
        "open": false
      },
      "http": {
        "all": false,
        "request": false
      },
      "dialog": {
        "all": false
      },
      "window": {
        "all": false,
        "close": true,
        "create": false,
        "hide": false,
        "show": true
      }
    },
    "windows": [
      {
        "title": "0xgen",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "fileDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' http://127.0.0.1:*; font-src 'self';"
    }
  },
  "build": {
    "beforeBuildCommand": "npm install",
    "beforeDevCommand": "npm install && npm run dev",
    "devPath": "http://127.0.0.1:5173",
    "distDir": "../dist"
  }
}
