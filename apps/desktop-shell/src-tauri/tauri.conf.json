{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "0xgen",
  "version": "0.1.0",
  "identifier": "dev.0xgen.desktop",
  "build": {
    "beforeBuildCommand": "npm install && npm run build",
    "beforeDevCommand": "npm install && npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "0xgen",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' http://127.0.0.1:*; font-src 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "shell": {
      "all": false,
      "execute": false,
      "open": true,
      "scope": [
        {
          "name": "open-url",
          "cmd": "open",
          "args": true
        }
      ]
    },
    "os": {}
  }
}
